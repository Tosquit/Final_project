---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import FooterSimple from '../layouts/footer.astro';
---
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="global.css">
<Layout title="Welcome to Astro.">
	<main>
		<h1>Welcome to <span class="text-gradient"> Final_project</span></h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="About us"
				body="We are a community dedicated to art in all its forms: painting, sculpture, music, dance and more. Our page has been created with the aim of being a virtual space to share and appreciate art.."
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Our purpose"
				body="We take pride in promoting creativity and artistic expression. Through our platform, we hope to provide a place of inspiration, exchange of ideas, and support for emerging and established artists."
			/>
			<Card
				href="https://astro.build/themes/"
				title="Explore the art"
				body="Discover unique works of art, read interviews with featured artists, enter contests and virtual exhibitions, and find cultural events near you. Art is at your fingertips!"
			/>
		</ul>
	</main>
</Layout>
<FooterSimple></FooterSimple>
</head>
</html>	

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
